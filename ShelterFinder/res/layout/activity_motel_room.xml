<shelterfinder.tools.VerticalScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="shelterfinder.activities.MotelRoomActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_back" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBaseline="@+id/iv_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_share" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_no_image" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_parent_rounded_corner" >

            <shelterfinder.tools.RoundedImageView
                android:id="@+id/img_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_avatar" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_avatar"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_avatar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/txt_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_area"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_price"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_description"                
                android:layout_marginTop="3dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"                            
                android:text="Điện thoại:" />
            
            <TextView
                android:id="@+id/txt_phone_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_description"
                android:layout_marginLeft="5dp"
                android:textColor="#007dff"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/txt_phone"
                android:layout_alignBaseline="@+id/txt_phone"
                android:paddingBottom="10dp" />

            

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_static_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/icon_map" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="5dp"
                android:text="Bình luận"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listview_comment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TextView1"
                android:divider="#FFFFFF"
                android:dividerHeight="3sp" >
            </ListView>

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/listview_comment"
                android:layout_margin="5dp"
                android:ems="10" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/bt_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_comment"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_button"
                android:text="GỬI BÌNH LUẬN"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/ic_upload_white"
                android:drawablePadding="5dp"
                android:textSize="13sp"
                android:textStyle="bold|italic" />

            <ProgressBar
                android:id="@+id/progressBarComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</shelterfinder.tools.VerticalScrollview>